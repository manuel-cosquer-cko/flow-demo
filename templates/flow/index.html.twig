{% extends "base.html.twig" %}

{% block title %}Flow{% endblock %}

{% block css %}
  <link rel="stylesheet" href="{{ asset('css/flow.css') }}" />
{% endblock %}

{% block content %}
  <h1>Checkout</h1>
    <div class="mb-3">
    <label for="form-local" class="form-label">Local</label>
    <select class="form-control" name="form-local" id="form-local">
      <option value="fr">FR</option>
      <option value="en">EN</option>
      <option value="de">DE</option>
      <option value="it">IT</option>
    </select>
  </div>

  <button type="button" class="btn btn-primary mb-4" id="reset_button">Reset</button>

  <div id="applepay">
  </div>

  <div id="interblock" class="separator mt-3" style="display: none">Ou payer par carte</div>

  <div id="payments" key="{{ checkout_public_key }}" class="mt-3">
    <span id="error-message"></span>
    <span id="successful-payment-message"></span>
  </div>        
{% endblock %}

{% block javascript %}
  <script src="https://checkout-web-components.checkout.com/index.js"></script>
  <script src="{{ asset('js/flow.js') }}"></script>
{% endblock %}
